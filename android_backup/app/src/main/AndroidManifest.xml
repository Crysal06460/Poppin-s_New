<manifest xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- ðŸ”¥ PERMISSIONS Ã€ AJOUTER POUR LES NOTIFICATIONS -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:label="votre_app_name"
        android:name="${applicationName}"
        android:icon="@mipmap/ic_launcher">
        
        <!-- VOTRE CONFIGURATION EXISTANTE... -->
        
        <!-- ðŸ”¥ AJOUT POUR LES NOTIFICATIONS FIREBASE -->
        <service
            android:name="io.flutter.plugins.firebase.messaging.FlutterFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        
        <!-- ðŸ”¥ CANAL DE NOTIFICATION -->
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_channel_id"
            android:value="messages_channel" />
        
        <!-- ðŸ”¥ ICÃ”NE DE NOTIFICATION -->
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@mipmap/ic_launcher" />
        
        <!-- ðŸ”¥ COULEUR DE NOTIFICATION -->
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/notification_color" />

        <!-- VOTRE ACTIVITÃ‰ PRINCIPALE EXISTANTE... -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:theme="@style/LaunchTheme">
            <!-- VOS INTENT-FILTERS EXISTANTS... -->
        </activity>
    </application>
</manifest>